<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientAppointmentsActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPatientAppointments"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:background="@color/secondaryBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/patientNavBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/secondaryRed"
        app:menu="@menu/patient_nav_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="60dp"
        app:itemBackground="@color/secondaryRed"
        app:itemIconTint="@color/nav_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <TextView
        android:id="@+id/tvAppointmentsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/tvAppointmentsHeading"
        android:textColor="@color/primaryRed"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewPatientAppointments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />

</androidx.constraintlayout.widget.ConstraintLayout>